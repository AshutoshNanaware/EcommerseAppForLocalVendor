<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/delete_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/cart_list_icon"
            android:layout_width="139dp"
            android:layout_height="139dp"
            android:padding="5dp"
            tools:ignore="MissingConstraints"/>

        <TextView
            android:id="@+id/caer_product_title"
            android:layout_width="230dp"
            android:layout_height="132dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:text="Text"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#4d4d4d"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="158dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/cart_listview_remove_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_remove"/>

        <TextView
            android:id="@+id/cart_listview_quantity_textview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:padding="2dp"
            android:textColor="#4d4d4d"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cart_listview_add_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:padding="5dp"
            tools:srcCompat="@drawable/ic_add" />
    </LinearLayout>

</LinearLayout>

