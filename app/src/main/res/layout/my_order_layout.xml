<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_customer_order"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="7dp"
            android:contentDescription="Property Image" />

        <LinearLayout
            android:id="@+id/infoSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_customer_order"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/product_name_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#4d4d4d"
                android:layout_marginBottom="10dp"
                android:text="Product Name"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_medium"/>

            <TextView
                android:id="@+id/dilivery_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Dilivery :"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_medium"/>

        </LinearLayout>



        "/>
    </LinearLayout>
</RelativeLayout>